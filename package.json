{
	"name": "uranio-trx",
	"version": "0.0.1",
	"description": "Uranio TRX - Uranio transreceiver",
	"main": "dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./client": "./dist/client.js",
		"./types": "./dist/types.js"
	},
	"typesVersions": {
		"*": {
			"*": [
				"dist/index.d.ts"
			],
			"client": [
				"dist/client.d.ts"
			],
			"types": [
				"dist/types.d.ts"
			]
		}
	},
	"repository": "git@github.com:nbl7/uranio-trx.git",
	"author": "Andrea Reni <mail@nbl7.net>",
	"scripts": {
		"build": "npx tsc -b",
		"generate:compile": "npx esbuild ./src/generate.ts --outfile=./generate/_generate_bundled.js --bundle --platform=node",
		"generate:run": "yarn generate:compile && node ./generate/_generate_bundled.js urn_output_dir=./generate urn_repo=trx",
		"generate:schema": "yarn generate:compile && node ./generate/_generate_bundled.js urn_output_dir=./.uranio/generate/types urn_repo=trx urn_command=schema",
		"generate:hooks": "yarn generate:compile && node ./generate/_generate_bundled.js urn_output_dir=./.uranio/generate/ urn_repo=trx urn_command=hooks",
		"generate:types": "yarn generate:compile && node ./generate/_generate_bundled.js urn_output_dir=./.uranio/generate/types urn_repo=trx urn_command=types",
		"dev": "npx tsc-watch --onSuccess \"node -r source-map-support/register -r dotenv/config ./dist/dev.js\"",
		"dev:generate:compile": "yarn generate:compile --watch",
		"dev:generate:run": "npx nodemon --watch ./generate/_generate_bundled.js -e ts ./generate/_generate_bundled.js urn_output_dir=./generate urn_repo=trx",
		"dev:generate": "npx concurrently \"yarn dev:generat:compile\" \"yarn dev:generate:run\"",
		"schema:reset": "yarn upgrade uranio-schema && npx npm-dts generate -L debug -r node_modules/uranio-schema -o ../../.uranio/generate/base/schema.d.ts",
		"types:reset": "npx npm-dts generate -L debug -r ./ -o ./.uranio/generate/base/uranio.d.ts"
	},
	"devDependencies": {
		"concurrently": "^7.0.0",
		"esbuild": "^0.14.22",
		"uranio-dev": "git+ssh://git@github.com/nbl7/uranio-dev.git"
	},
	"dependencies": {
		"axios": "^0.26.0",
		"dotenv": "^16.0.0",
		"uranio-api": "git+ssh://git@github.com/nbl7/uranio-api.git#new",
		"uranio-schema": "ssh://git@github.com/nbl7/uranio-schema.git",
		"urn-lib": "git+ssh://git@github.com/nbl7/uranio-lib.git#new"
	}
}
